---

const userEmail = Astro.cookies.get("userEmail");
---

<header
  class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl justify-self-center w-full mx-auto bg-gray-100"
>
  <a href="/" class="flex gap-x-4 items-center">
   

    <p class="uppercase text-3xl text-zinc-900">Test Task</p>
  </a>

  <nav class="flex gap-x-10 ">
    <a href="/" class="text-xl font-bold  text-black">Home</a>
    <a href="/product-catalog" class="text-xl font-bold  text-black">Products</a>
    <a href="/cart" class="text-xl font-bold  text-black">Cart</a>
  </nav>

  {
    userEmail?.value ? (
      <a
        href="/logout"
        class="bg-black text-white py-3 px-6 rounded-xl text-xl"
      >
        Logout
      </a>
    ) : (
      <a
        href="/login"
        class="bg-black text-white py-3 px-6 rounded-xl text-xl"
      >
        Login
      </a>
    )
  }
</header>
